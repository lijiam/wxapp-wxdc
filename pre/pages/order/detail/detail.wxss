  background:#FFFFFF;
  display:flex;
  font-size:15px;
  border-bottom:1px #E3E3E3 solid;
}
.note-exchange{
  padding:3px 5px;
  border:1px solid #DC143C;
  color:#DC143C;
  font-size:16px
}
.order-info-li{
  color:black;
  margin-left:10px;
}
.note-card{
  margin-left:20px;
  color:#A2A1A0;
